<?php $_source  = $this->getSource(); 
$gcData = $this->getSource()->getData('aw_gift_cards'); ?>
<?php $this->setPriceDataObject($_source) ?>

<?php if (is_array($gcData) && (float) $_source->getDataUsingMethod($this->getSourceField())): ?>
<?php foreach($gcData as $cardData): ?>
    <tr>
        <td class="label"><?php echo $this->__('GiftCard / Retroviwer Code:'); ?><?php echo $cardData['code'];?> </td>
        <td <?php echo $this->getHtmlClass() ? ('class="' . $this->getHtmlClass() . '"') : '';?>><?php if ($this->getStrong()) : ?><strong><?php endif; ?><font color="red">(<?php echo   Mage::helper('core')->currency($cardData['giftcard_amount'], true, false); ?>)</font><?php if ($this->getStrong()) : ?></strong><?php endif; ?></td>
    </tr>
<?php endforeach; ?>
<?php endif; ?>
