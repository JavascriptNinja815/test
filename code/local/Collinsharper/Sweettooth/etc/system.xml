<?xml version="1.0"?>
<config>
    <tabs>
        <sweettooth module="chsweettooth">
            <label>Sweettooth</label>
            <sort_order>10</sort_order>
        </sweettooth>
    </tabs>
    <sections>
        <chsweettooth translate="label" module="chsweettooth">
            <label>Configuration</label>
            <tab>sweettooth</tab>
            <frontend_type>text</frontend_type>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <chsweettooth_api_conf>  
                    <label>API Configuration</label>
                    <frontend_type>text</frontend_type>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <api_key>
                            <label>API private key</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </api_key>
                        <api_public_key>
                            <label>API public key</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </api_public_key>
                        <order_status>
                            <label>Order Status for points</label>
                            <frontend_type>multiselect</frontend_type>
                            <source_model>chsweettooth/orderStatus</source_model>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </order_status>
                    </fields>
                </chsweettooth_api_conf>
            </groups>
        </chsweettooth>
    </sections>
</config>
